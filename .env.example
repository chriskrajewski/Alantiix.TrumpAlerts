# Twitter / X API (optional, enables Twitter monitoring)
#TWITTER_BEARER_TOKEN=A
#TWITTER_HANDLES=realDonaldTrump

# Truth Social handles (comma separated)
TRUTHSOCIAL_HANDLES=realDonaldTrump
#TRUTHSOCIAL_API_BASE_URL=https://truthsocial-api.vercel.app
#TRUTHSOCIAL_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64; rv:142.0) Gecko/20100101 Firefox/142.0
#TRUTHSOCIAL_TEST_CREATED_AFTER=2024-07-01T00:00:00Z

# Polling webhook security (required when invoking /api/poll remotely)
#POLL_WEBHOOK_TOKEN=super-secret-token

# Feature toggles
ENABLE_TWITTER=false
ENABLE_TRUTHSOCIAL=true

# Notification webhooks (at least one required for delivery)
ALERT_WEBHOOK_URL=
ALERT_WEBHOOK_URLS=

# Sentiment analysis (optional, fallback heuristics used when absent)
OPENAI_API_KEY=

# State persistence (recommended for reliable dedupe)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Misc
LOG_LEVEL=info
